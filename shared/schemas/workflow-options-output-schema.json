{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Workflow Options",
    "description": "Workflow options",
    "type": "object",
    "properties": {
        "status": {
            "description": "The current status of a workflow execution",
            "$ref": "workflow-status-schema.json"
        },
        "currentVersion": {
            "$ref": "${{ values.workflowId }}-workflow-option-output-schema.json"
        },
        "upgradeOptions": {
            "type": "array",
            "items": {
                "$ref": "${{ values.workflowId }}-workflow-option-output-schema.json"
            }
        },
        "migrationOptions": {
            "type": "array",
            "items": {
                "$ref": "${{ values.workflowId }}-workflow-option-output-schema.json"
            }
        },
        "newOptions": {
            "type": "array",
            "items": {
                "$ref": "${{ values.workflowId }}-workflow-option-output-schema.json"
            }
        },
        "continuationOptions": {
            "type": "array",
            "items": {
                "$ref": "${{ values.workflowId }}-workflow-option-output-schema.json"
            }
        },
        "otherOptions": {
            "type": "array",
            "items": {
                "$ref": "${{ values.workflowId }}-workflow-option-output-schema.json"
            }
        }
    },
    "required": [
        "status"
    ]
}